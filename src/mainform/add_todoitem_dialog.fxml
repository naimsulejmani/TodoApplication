<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<DialogPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="mainform.AddTodoItemController"
            prefHeight="400.0" prefWidth="600.0">
    <headerText>
        New Todo Form
    </headerText>
    <content>
        <GridPane hgap="10" vgap="10">

            <Label text="Short Description:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
            <TextField fx:id="txtShortDescription" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

            <Label text="Detail Description:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
            <TextArea fx:id="txtAreaDetail" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

            <Label text="Deadline date: " GridPane.rowIndex="2" GridPane.columnIndex="0"/>
            <DatePicker fx:id="dpDeadlineDate" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

            <Label text="Color" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
            <ColorPicker fx:id="colorPicker" GridPane.rowIndex="3" GridPane.columnIndex="1"/>

        </GridPane>
    </content>
</DialogPane>
